<AnchorPane
	xmlns="http://javafx.com/javafx/8.0.60" 
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="songlib.view.songlibController"
	stylesheets="/songlib/view/style.css">

	<padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <HBox layoutX="21.0" layoutY="4.0" prefHeight="50.0" prefWidth="460.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Song List" wrappingWidth="123.09521484375">
               <font>
                  <Font size="25.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </Text>
            <Button fx:id="addSong" 
            	alignment="CENTER" 
            	mnemonicParsing="false" 
            	text="ADD" 
            	textAlignment="CENTER">
               <font>
                  <Font size="19.0" />
               </font>
               <HBox.margin>
                  <Insets left="50.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="editSong"
            	text="EDIT">
            	<font>
                  <Font size="19.0" />
               </font>
            </Button>
            <Button fx:id = "deleteSong"
            	text="DELETE">
            	<font>
                  <Font size="19.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <ListView fx:id="listView" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="349.0" prefWidth="500.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0" />
      <HBox layoutX="21.0" layoutY="60.0" prefHeight="40.0" prefWidth="460.0">
         <children>
            <TextField fx:id="songName" prefHeight="27.0" prefWidth="110.0" promptText="Song Name" />
            <TextField fx:id="artist" layoutX="10.0" layoutY="10.0" prefHeight="27.0" prefWidth="110.0" promptText="Artist" />
            <TextField fx:id="details" layoutX="120.0" layoutY="10.0" prefHeight="27.0" prefWidth="137.0" promptText="Details" />
            <!--  <Button mnemonicParsing="false" text="Delete" />
            <Button layoutX="350.0" layoutY="10.0" mnemonicParsing="false" text="Edit" />-->
         </children>
      </HBox>
   </children>
